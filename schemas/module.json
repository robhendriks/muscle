{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Muscle Module",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "authors": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+(-[0-9a-z]+)?$"
    },
    "main": {
      "type": "string",
      "pattern": ".bicep$"
    }
  },
  "required": [
    "name",
    "description",
    "authors",
    "version",
    "main"
  ]
}